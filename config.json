{
    "name": "Image_Classification",
    "n_gpu": 1,
    "input_file": "./data/eval/info.csv",
    "output_file": "./data/submission.csv",

    "arch": {
        "type": "CNN",
        "args": {}
    },
    "dataset": {
        "type": "TrainDataset",
        "args": {
            "data_dir": "./data/train/images",
            "val_ratio": 0.2
        }
    },
    "test_dataset": {
        "type": "TestDataset",
        "args": {
            "img_paths": "./data/eval/images",
            "resize": 224
        }
    },
    "train_loader": {
        "type": "BasicDataLoader",
        "args":{
            "batch_size": 128,
            "shuffle": false,
            "num_workers": 4
        }
    },
    "valid_loader": {
        "type": "BasicDataLoader",
        "args":{
            "batch_size": 64,
            "shuffle": false,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "BasicTrainer",
        "args": {},

        "epochs": 2,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
